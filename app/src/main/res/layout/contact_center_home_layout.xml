<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_center_home_swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/space13" />

        <Space
            android:layout_width="20px"
            android:layout_height="match_parent"
            android:layout_below="@+id/space13"
            android:layout_centerHorizontal="true"
            android:id="@+id/space14" />

        <android.support.v4.view.ViewPager
            android:id="@+id/data_gauges_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/borders2"
            android:layout_alignBottom="@+id/space13">
        </android.support.v4.view.ViewPager>

        <android.support.v4.view.ViewPager
            android:id="@+id/invoives_incoming_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/borders2"
            android:layout_alignRight="@+id/space14"
            android:layout_alignEnd="@+id/space14"
            android:layout_below="@+id/space13">
        </android.support.v4.view.ViewPager>

        <android.support.v4.view.ViewPager
            android:id="@+id/leads_outgoing_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/borders2"
            android:layout_alignLeft="@+id/space14"
            android:layout_alignStart="@+id/space14"
            android:layout_below="@+id/data_gauges_pager">
        </android.support.v4.view.ViewPager>

    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>
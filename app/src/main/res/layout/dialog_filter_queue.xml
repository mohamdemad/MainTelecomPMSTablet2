<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    >

<Spinner
    android:id="@+id/dialog_filter_spinner"
    android:layout_width="300sp"
    android:layout_height="wrap_content"
    ></Spinner>
    <EditText
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/fromDate_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="From Date"
        android:focusable="false"
        android:layout_below="@+id/dialog_filter_spinner"
        />

    <EditText
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/toDate_id"
        android:hint="To Date"
        android:layout_toRightOf="@+id/fromDate_id"
        android:focusable="false"
        android:layout_below="@+id/dialog_filter_spinner"

        />

    <Spinner
        android:id="@+id/spiner_id"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fromDate_id"
        android:prompt="@string/project_hint"
        />

    <EditText
        android:id="@+id/queue_id"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Select Queue"
        android:layout_below="@+id/spiner_id"
        android:focusable="false"
        />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
     <item android:state_pressed="true" >
        <shape>
        	<solid
        		android:color="#a6a5a5" />
            <stroke
                android:width="1dp"
                 />
            <corners
                android:radius="20dp" />
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#4297e6"
                android:endColor="#4297e6"
                android:angle="270" />
            <stroke
                android:width="1dp"
                 />
            <corners
                android:radius="20dp" />
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp" />
        </shape>
    </item>

</selector>
